.index
  height 100vh
  width 100vw
  display table

  .content
    display table-cell
    vertical-align middle

    a
      text-decoration none

    #title
      color #B0344E

    .hide
      display none

    #chat-button
      background-color #296AD4
      color #FFFFFF
      font-family Arial
      font-size 15px

      &:hover
        background-color #4099FF
        transition 0.2s
